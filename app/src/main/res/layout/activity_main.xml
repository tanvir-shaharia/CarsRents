<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/white">
    <ImageView
        android:layout_marginTop="110dp"
        android:id="@+id/car"
        android:layout_width="match_parent"
        android:transitionName="car_image"
        android:layout_height="300dp"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/car"
        >

    </ImageView>
    <TextView
        android:id="@+id/nametext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="car's rent"
        android:textAllCaps="true"
        android:transitionName="text"
        android:layout_marginTop="5dp"
        android:textColor="#F3C207"
        android:textSize="85sp"
        android:fontFamily="@font/banger"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/car">

    </TextView>
    <TextView
        android:id="@+id/tagnametext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nation wide Car-rental app"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:fontFamily="@font/antic"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/nametext">

    </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>